# Bot Environment (Example - copy to .env)

# Turso Cloud Database (Required for Vercel deployment)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Network: mainnet-beta or devnet
NETWORK=mainnet-beta

# RPC URL (Helius recommended)
RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Helius API Key (for holder queries)
HELIUS_API_KEY=YOUR_HELIUS_KEY

# Dev wallet secret key (base58 encoded)
DEV_WALLET_SECRET_KEY=YOUR_SECRET_KEY

# Token mint address (set before launch)
TOKEN_MINT_ADDRESS=YOUR_TOKEN_MINT

# Safety settings
MIN_SOL_BALANCE=0.5
SWAP_THRESHOLD=0.1
SLIPPAGE_BPS=100

# Distribution settings
MIN_HOLDER_BALANCE=0
DISTRIBUTION_WEIGHTING=linear
DISTRIBUTION_CRON=*/15 * * * *

# Logging
LOG_LEVEL=info
