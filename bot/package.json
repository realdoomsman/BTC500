{
  "name": "btc500-distribution-bot",
  "version": "1.0.0",
  "description": "Automated SOL to wBTC distribution bot for Pump.fun token holders",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
